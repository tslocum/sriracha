{{range $i, $thread := .Threads}}
	{{if gt $i 0}}
        <hr>
    {{end}}
	{{range $i, $post := $thread}}
        {{if eq .Parent 0}}
            <div id="post{{.ID}}" class="op">
                {{if ne .File ""}}
                    {{$embed := .EmbedInfo}}
                    <span class="filesize">{{if not .IsEmbed}}{{T "File"}}{{else}}{{T "Embed"}}{{end}}: <a href="{{if not .IsEmbed}}{{$.Board.Path}}src/{{.File}}{{else}}{{.FileOriginal}}{{end}}" target="_blank" onclick="return expandFile(event, '{{.ID}}');">{{if not .IsEmbed}}{{.File}}{{else}}{{index $embed 2}}{{end}}</a>&ndash;{{if not .IsEmbed}}{{template "imgboard_post_fileinfo.gohtml" .}}{{else}}{{index $embed 1}}{{end}}</span><br>
                    <div id="thumbfile{{.ID}}">
                        {{if ne .Thumb ""}}
                            <a href="{{if not .IsEmbed}}{{$.Board.Path}}src/{{.File}}{{else}}{{.FileOriginal}}{{end}}" target="_blank" onclick="return expandFile(event, '{{.ID}}');"><img src="{{$.Board.Path}}thumb/{{.Thumb}}" alt="{{.ID}}" class="thumb" id="thumbnail{{.ID}}" width="{{.ThumbWidth}}" height="{{.ThumbHeight}}"></a>
                        {{end}}
                    </div>
                    <div id="expand{{.ID}}" style="display: none;">{{.ExpandHTML}}</div>
                    <div id="file{{.ID}}" class="thumb" style="display: none;"></div>
                {{end}}
                <a id="{{.ID}}"></a>
                <label>
                    <input type="checkbox" name="delete[]" value="{{.ID}}">
                    {{template "imgboard_page_subject.gohtml" .}}
                    {{.NameBlock | HTML}}
                </label>
                <span class="reflink">
                    {{if $.Board.Reports}}
                        <a href="/sriracha/?action=report&board={{.Board.ID}}&post={{.ID}}" title="{{T "Report"}}">R</a>
                    {{end}}
                    <a href="{{$.Board.Path}}res/{{.Thread}}.html#{{.ID}}">No.</a><a href="{{$.Board.Path}}res/{{.Thread}}.html#q{{.ID}}">{{.ID}}</a>
                    {{if $.ModMode}}
                        <b><a href="/sriracha/mod/delete/{{.ID}}" title="{{T "Delete"}}">D</a>
                        <a href="/sriracha/mod/ban/{{.ID}}" title="{{T "Ban"}}">B</a>
                        <a href="/sriracha/mod/{{.ID}}" title="{{T "Delete & ban"}}">D&amp;B</a></b>
                    {{end}}
                </span>
                {{if not $.ReplyMode}}{{if not $.ModMode}}&nbsp;[<a href="{{$.Board.Path}}res/{{.Thread}}.html">{{T "Reply"}}</a>]{{else}}&nbsp;[<a href="/sriracha/board/mod/{{$.Board.ID}}/{{.Thread}}">{{T "View"}}</a>]{{end}}{{end}}
                <div class="message">
                    {{.Message | HTML}}
                </div>
            </div>
            {{$omitted := Omitted .Board.Replies .Replies}}
            {{if and (eq $.ReplyMode 0) (gt $omitted 0)}}
                <span class="omittedposts">{{TN "%d post omitted. Click Reply to view." "%d posts omitted. Click Reply to view." $omitted $omitted}}</span>
            {{end}}
        {{else}}
            <table>
            <tbody>
                <tr>
                    <td class="doubledash">
                        &#0168;
                    </td>
                    <td class="reply" id="post{{.ID}}">
                        <a id="{{.ID}}"></a>
                        <label>
                            <input type="checkbox" name="delete[]" value="{{.ID}}">
                            {{template "imgboard_page_subject.gohtml" .}}
                            {{.NameBlock | HTML}}
                        </label>
                        <span class="reflink">
                            {{if $.Board.Reports}}
                                <a href="/sriracha/?action=report&board={{.Board.ID}}&post={{.ID}}" title="{{T "Report"}}">R</a>
                            {{end}}
                            <a href="{{$.Board.Path}}res/{{.Thread}}.html#{{.ID}}">No.</a><a href="{{$.Board.Path}}res/{{.Thread}}.html#q{{.ID}}">{{.ID}}</a>
                            {{if $.ModMode}}
                                <b><a href="/sriracha/mod/delete/{{.ID}}" title="{{T "Delete"}}">D</a>
                                <a href="/sriracha/mod/ban/{{.ID}}" title="{{T "Ban"}}">B</a>
                                <a href="/sriracha/mod/{{.ID}}" title="{{T "Delete & ban"}}">D&amp;B</a></b>
                            {{end}}
                        </span>
                        <small><span id="backlinks{{.ID}}" class="backlinks"></span></small><br>
                        {{if ne .File ""}}
                            {{$embed := .EmbedInfo}}
                            <span class="filesize"><a href="{{if not .IsEmbed}}{{$.Board.Path}}src/{{.File}}{{else}}{{.FileOriginal}}{{end}}" target="_blank" onclick="return expandFile(event, '{{.ID}}');">{{if not .IsEmbed}}{{.File}}{{else}}{{index $embed 2}}{{end}}</a>&ndash;{{if not .IsEmbed}}{{template "imgboard_post_fileinfo.gohtml" .}}{{else}}{{index $embed 1}}{{end}}</span><br>
                            <div id="thumbfile{{.ID}}">
                                {{if ne .Thumb ""}}
                                    <a href="{{if not .IsEmbed}}{{$.Board.Path}}src/{{.File}}{{else}}{{.FileOriginal}}{{end}}" target="_blank" onclick="return expandFile(event, '{{.ID}}');"><img src="{{$.Board.Path}}thumb/{{.Thumb}}" alt="6" class="thumb" id="thumbnail{{.ID}}" width="{{.ThumbWidth}}" height="{{.ThumbHeight}}"></a>
                                {{end}}
                            </div>
                            <div id="expand{{.ID}}" style="display: none;">{{.ExpandHTML}}</div>
                            <div id="file{{.ID}}" class="thumb" style="display: none;"></div>
                        {{end}}
                        <div class="message">
                            {{.Message | HTML}}
                        </div>
                    </td>
                </tr>
            </tbody>
            </table>
        {{end}}
    {{end}}
{{end}}
